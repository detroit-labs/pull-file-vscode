{
    "name": "pull-file",
    "displayName": "Pull File",
    "description": "This extension is used to overwrite the content of the current file with the content of a selected file.",
    "version": "1.2.2",
    "publisher": "shawn-mallon",
    "author": "Shawn Mallon <shawn.mallon@detroitlabs.com>",
    "homepage": "https://github.com/Fieryava/pull-file",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Fieryava/pull-file/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Fieryava/pull-file.git"
    },
    "engines": {
        "vscode": "^1.27.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "copy",
        "file"
    ],
    "activationEvents": [
        "onCommand:extension.pullFile",
        "onLanguage:json"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.pullFile",
                "title": "Pull File"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "when": "editorLangId == json",
                    "command": "extension.pullFile"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "Pull File Configuration",
            "properties": {
                "pullfile.useQuickPick": {
                    "type": "boolean",
                    "default": true,
                    "description": "Select files with a quickpick."
                },
                "pullfile.includeOpenDialogOptionInQuickPick": {
                    "type": "boolean",
                    "default": true,
                    "description": "Include an option to use the open dialog in the quickpick."
                },
                "pullfile.useStatusBarButton": {
                    "type": "boolean",
                    "default": true,
                    "description": "Initiate pull file with a button on the status bar."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
